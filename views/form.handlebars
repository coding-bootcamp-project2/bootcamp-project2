<form id="question-form">
  <h1>Character Creator</h1>
  <!-- Name Input -->
  <div id="nameInput">
    <label for="name">Name:</label>
  </div>
  <input type="text" id="name" name="name" required>
  <!-- Race Dropdown -->
  <div id="raceDropdown">
    <label for="race">Select your character's race:</label>
    <select id="race" name="race">
      <option value="dwarf" data-id="1">Dwarf</option>
      <option value="elf" data-id="2">Elf</option>
      <option value="halfling" data-id="3">Halfling</option>
      <option value="human" data-id="4">Human</option>
      <option value="gnome" data-id="5">Gnome</option>
      <option value="tiefling" data-id="6">Tiefling</option>
      <!-- Add more race options as needed -->
    </select>
  </div>
  <!-- Question field -->
  <div id="question" class="hidden"></div>
  <!-- Answer buttons -->
  <div class="answers-section hidden">
    <div id="answer-buttons">
      <button id="answer1" data-class="1">Answer 1</button>
      <button id="answer2" data-class="2">Answer 2</button>
      <button id="answer3" data-class="3">Answer 3</button>
      <button id="answer4" data-class="4">Answer 4</button>
      <button id="answer5" data-class="5">Answer 5</button>
      <button id="answer6" data-class="6">Answer 6</button>
      <button id="answer7" data-class="7">Answer 7</button>
      <button id="answer8" data-class="8">Answer 8</button>
      <button id="answer9" data-class="9">Answer 9</button>
    </div>
  </div>
</form>
<!-- Start quiz button -->
<button id="startquiz">Start Quiz</button>

<script src="/js/form.js"></script>