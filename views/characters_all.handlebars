<!-- characters_all.handlebars -->
<div id="characters-list" class="dnd-list">
    <h1 class="dnd-header">All Characters</h1>
    <ul>
        {{#each characters}}
            <li>
                <div class="character-details dnd-card">
                    {{> character-details-template}}
                </div>
            </li>
        {{/each}}
    </ul>
</div>

<!-- Include the Character Template -->
<script id="character-details-template" type="text/x-handlebars-template">
    <p><strong class="dnd-label">ID:</strong> {{id}}</p>
    <p><strong class="dnd-label">User ID:</strong> {{user_id}}</p>
    <p><strong class="dnd-label">Class ID:</strong> {{class_id}}</p>
    <p><strong class="dnd-label">Level:</strong> {{level}}</p>
    <p><strong class="dnd-label">Hit Points:</strong> {{hit_points}}</p>
    <p><strong class="dnd-label">Date Created:</strong> {{createdAt}}</p>
</script>
